<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NWT.UserSubmissionPage">
    <ContentPage.Content>
        <ScrollView>
            <Grid x:Name="UserNewsGrid" RowSpacing="0" ColumnSpacing="0" BackgroundColor="#f8f8f9">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Editor x:Name="Rubrik" Text="Rubrik" Grid.Column="0" Grid.Row="0"/>
                <Editor x:Name="Ingress" Text="Ingress" Grid.Column="0" Grid.Row="1"/>
                <Editor x:Name="Brodtext" Text="Brodtext" Grid.Column="0" Grid.Row="2"/>
                <Button BackgroundColor="#FFFFFF" Text="Reference" CornerRadius="5" Grid.Column="0" Grid.Row="3" Margin="3" Clicked="GetReference"/>
                <Button BackgroundColor="#FFFFFF" Text="Submit" CornerRadius="5" Grid.Column="0" Grid.Row="4" Margin="3" Clicked="Submit"/>

            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
