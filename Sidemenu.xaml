                        <BoxView Color="#47bcae"
                 WidthRequest="300"
                 HeightRequest="0"
                 VerticalOptions="Start"
                 HorizontalOptions="CenterAndExpand"
                 Grid.Row="3" Grid.Column="1"        
                 />
                        <BoxView Color="#f8f8f9"
                 WidthRequest="300"
                 HeightRequest="1"
                 VerticalOptions="Start"
                 HorizontalOptions="CenterAndExpand"
                 Grid.Row="3" Grid.Column="1"        
