<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NWT.Sidemenu"
             NavigationPage.HasNavigationBar = "False"
             BackgroundColor="#FFFFFF"
             Title="Kategorier">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS, Android" Value="0,30,0,0" />
        </OnPlatform>
    </ContentPage.Padding>
    <ContentPage.Content>
        
        <StackLayout>
            <!--<Label Text="Christoffer Bodegård" TextColor="White" FontSize="28" HorizontalOptions="End" Margin="20"></Label>
            <Label Text="Category  Tabs" TextColor="White" FontSize="24" HorizontalOptions="Center" Margin="20"></Label>-->
            <!-- BackgroundColor="#50d2c2" -->
            <!-- Comment from Chris -->
            <Grid x:Name="NewsGrid" RowSpacing="0" ColumnSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ScrollView Grid.Row="0" Grid.RowSpan="8" Grid.Column="0" Grid.ColumnSpan="3">
                    <Grid x:Name="NewsGridOri" RowSpacing="0" ColumnSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Switch x:Name="Nyheter"
                        x:FieldModifier="public"
                IsToggled="True"
                Toggled="PrintNews"
                HorizontalOptions="Center"
                VerticalOptions="Start"
               OnColor="#48BDAE"
                Grid.Row="0" Grid.Column="0"
                />
                        <Switch x:Name="Brott"
                        x:FieldModifier="public" 
               IsToggled="True"
               Toggled="PrintNews"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               OnColor="#48BDAE"
                Grid.Row="1" Grid.Column="0"
                />
                        <Switch x:Name="Vård"
                        x:FieldModifier="public" 
               IsToggled="True"
               Toggled="PrintNews"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               OnColor="#48BDAE"
                Grid.Row="2" Grid.Column="0"
                />
                        <Switch x:Name="Miljö"
                        x:FieldModifier="public" 
               IsToggled="True"
               Toggled="PrintNews"              
               HorizontalOptions="Center"
               VerticalOptions="Start"
               OnColor="#48BDAE"
                Grid.Row="3" Grid.Column="0"
                />
                        <Switch x:Name="Skola"
                        x:FieldModifier="public" 
               IsToggled="True"
               Toggled="PrintNews"              
               HorizontalOptions="Center"
               VerticalOptions="Start"
               OnColor="#48BDAE"
                Grid.Row="4" Grid.Column="0"
                />
                        <Switch x:Name="Mat"
                        x:FieldModifier="public" 
               IsToggled="True"
               Toggled="PrintNews"              
               HorizontalOptions="Center"
               VerticalOptions="Start"
               OnColor="#48BDAE"
                Grid.Row="5" Grid.Column="0"
                />
                        <Switch x:Name="Bostad"
                        x:FieldModifier="public" 
               IsToggled="True"
               Toggled="PrintNews"              
               HorizontalOptions="Center"
               VerticalOptions="Start"
               OnColor="#48BDAE"
                Grid.Row="6" Grid.Column="0"
                />
                        <Switch x:Name="Trafik"
                        x:FieldModifier="public" 
               IsToggled="True"
               Toggled="PrintNews"              
               HorizontalOptions="Center"
               VerticalOptions="Start"
               OnColor="#48BDAE"
                Grid.Row="7" Grid.Column="0"
                />
                        <Switch x:Name="Politik"
                        x:FieldModifier="public" 
               IsToggled="True"
               Toggled="PrintNews"              
               HorizontalOptions="Center"
               VerticalOptions="Start"
               OnColor="#48BDAE"
                Grid.Row="8" Grid.Column="0"
                />
                        <Switch x:Name="Sport"
                        x:FieldModifier="public" 
               IsToggled="True"
               Toggled="PrintNews"              
               HorizontalOptions="Center"
               VerticalOptions="Start"
               OnColor="#48BDAE"
                Grid.Row="9" Grid.Column="0"
                />
                <Switch x:Name="Ekonomi"
                        x:FieldModifier="public" 
               IsToggled="True"
               Toggled="PrintNews"              
               HorizontalOptions="Center"
               VerticalOptions="Start"
               OnColor="#48BDAE"
                Grid.Row="10" Grid.Column="0"
                />
                <Switch x:Name="Åsikter"
                        x:FieldModifier="public" 
               IsToggled="True"
               Toggled="PrintNews"              
               HorizontalOptions="Center"
               VerticalOptions="Start"
               OnColor="#48BDAE"
                Grid.Row="11" Grid.Column="0"
                />
                <Switch x:Name="Kultur"
                        x:FieldModifier="public" 
               IsToggled="True"
               Toggled="PrintNews"              
               HorizontalOptions="Center"
               VerticalOptions="Start"
               OnColor="#48BDAE"
                Grid.Row="12" Grid.Column="0"
                />
                <Switch x:Name="Familj"
                        x:FieldModifier="public" 
               IsToggled="True"
               Toggled="PrintNews"              
               HorizontalOptions="Center"
               VerticalOptions="Start"
               OnColor="#48BDAE"
                Grid.Row="13" Grid.Column="0"
                />



                        <BoxView Color="#47bcae"
                 WidthRequest="300"
                 HeightRequest="0"
                 VerticalOptions="Start"
                 HorizontalOptions="CenterAndExpand"
                 Grid.Row="0" Grid.Column="1"        
                 />
                        <BoxView Color="#f8f8f9"
                 WidthRequest="300"
                 HeightRequest="1"
                 VerticalOptions="Start"
                 HorizontalOptions="CenterAndExpand"
                 Grid.Row="0" Grid.Column="1"        
                 />
                        <BoxView Color="#47bcae"
                 WidthRequest="300"
                 HeightRequest="0"
                 VerticalOptions="Start"
                 HorizontalOptions="CenterAndExpand"
                 Grid.Row="1" Grid.Column="1"        
                 />
                        <BoxView Color="#f8f8f9"
                 WidthRequest="300"
                 HeightRequest="1"
                 VerticalOptions="Start"
                 HorizontalOptions="CenterAndExpand"
                 Grid.Row="1" Grid.Column="1"        
