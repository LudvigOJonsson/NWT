                        <BoxView Color="#f8f8f9"
                 WidthRequest="300"
                 HeightRequest="1"
                 VerticalOptions="Start"
                 HorizontalOptions="CenterAndExpand"
                 Grid.Row="2" Grid.Column="1"        
