                        <Label Text="Sport " FontSize="18" TextColor="Black" HorizontalOptions="Start" VerticalOptions="Start" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" HorizontalTextAlignment="Start"/>
                        <Label Text="Ekonomi " FontSize="18" TextColor="Black" HorizontalOptions="Start" VerticalOptions="Start" Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2" HorizontalTextAlignment="Start"/>
                        <Label Text="Åsikter " FontSize="18" TextColor="Black" HorizontalOptions="Start" VerticalOptions="Start" Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="2" HorizontalTextAlignment="Start"/>
                        <Label Text="Nöje/Kultur" FontSize="18" TextColor="Black" HorizontalOptions="Start" VerticalOptions="Start" Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="2" HorizontalTextAlignment="Start"/>
                        <Label Text="Familj" FontSize="18" TextColor="Black" HorizontalOptions="Start" VerticalOptions="Start" Grid.Row="13" Grid.Column="1" Grid.ColumnSpan="2" HorizontalTextAlignment="Start"/>

                    </Grid>
                </ScrollView>

                <BoxView Color="#50d2c2"
                 WidthRequest="500"
                         HeightRequest="400"

                 VerticalOptions="CenterAndExpand"
                 HorizontalOptions="CenterAndExpand"
                 Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3"        
                 />

                <Button Clicked="UserSettings" Text="" BackgroundColor="Transparent" Grid.Row="9" Grid.Column="0" Image="settingsWhite.png" HorizontalOptions="Center"/>
                <Button Clicked="About" Text="" BackgroundColor="Transparent" Grid.Row="9" Grid.Column="1" Image="about.png" HorizontalOptions="Center"/>
                <Button Clicked="Logout" Text="" BackgroundColor="Transparent" Grid.Row="9" Grid.Column="2" Image="logout.png" HorizontalOptions="Center"/>
                
            </Grid>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>