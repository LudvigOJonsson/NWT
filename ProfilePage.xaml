<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NWT.ProfilePage"
             BackgroundColor="#f8f8f9">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="settings.png" Text="Search" Clicked="Settings"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS, Android" Value="0,0,0,0" />
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout Spacing="0">
        
        
        
            <ScrollView>
            <Grid x:Name="ArticleGrid" RowSpacing="0" ColumnSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="120" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image x:Name="ProfilePicture" Source="snail.png" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Grid.Row="0" Grid.Column="1"/>
                <Button Text="" BackgroundColor="Transparent" Grid.Row="0" Grid.Column="0" Image="leftarrow.png" HorizontalOptions="Start"/>
                <Button Text="" BackgroundColor="Transparent" Grid.Row="0" Grid.Column="2" Image="rightarrow.png" HorizontalOptions="End"/>
                <Label Text="Orange" x:Name="Welcome"  FontSize="28" HorizontalOptions="CenterAndExpand" VerticalOptions="End" Grid.Row="0" Grid.Column="1"/>
                
                
                <Button Text="" BackgroundColor="#50d2c2" Grid.Row="1" Grid.Column="0" Image="checkmark.png"/>
                <Button x:Name="LogoutButton" Text="" BackgroundColor="#f8f8f9" Clicked="Logout" Grid.Row="1" Grid.Column="1" Image="exclaimation.png"/>
                <Button Text="" BackgroundColor="#f8f8f9" Grid.Row="1" Grid.Column="2" Image="star2.png"/>


                <Button Text="1" BackgroundColor="#f8f8f9" Grid.Row="2" Grid.ColumnSpan="3" HorizontalOptions="FillAndExpand" Image="exclaimation.png"/>
                <BoxView HeightRequest="1" Grid.Row="2" Grid.ColumnSpan="3" Color="LightGray" VerticalOptions="End" WidthRequest="160"/>
                <Button Text="2" BackgroundColor="#f8f8f9" Grid.Row="3" Grid.ColumnSpan="3" HorizontalOptions="FillAndExpand" Image="exclaimation.png"/>
                <BoxView HeightRequest="1" Grid.Row="3" Grid.ColumnSpan="3" Color="LightGray" VerticalOptions="End" WidthRequest="160"/>
                <Button Text="3" BackgroundColor="#f8f8f9" Grid.Row="4" Grid.ColumnSpan="3" HorizontalOptions="FillAndExpand" Image="exclaimation.png"/>
                <BoxView HeightRequest="1" Grid.Row="4" Grid.ColumnSpan="3" Color="LightGray" VerticalOptions="End" WidthRequest="160"/>
                <Button Text="4" BackgroundColor="#f8f8f9" Grid.Row="5" Grid.ColumnSpan="3" HorizontalOptions="FillAndExpand" Image="exclaimation.png"/>
                <BoxView HeightRequest="1" Grid.Row="5" Grid.ColumnSpan="3" Color="LightGray" VerticalOptions="End" WidthRequest="160"/>
                <Button Text="5" BackgroundColor="#f8f8f9" Grid.Row="6" Grid.ColumnSpan="3" HorizontalOptions="FillAndExpand" Image="exclaimation.png"/>
                <BoxView HeightRequest="1" Grid.Row="6" Grid.ColumnSpan="3" Color="LightGray" VerticalOptions="End" WidthRequest="160"/>
                <Button Text="6" BackgroundColor="#f8f8f9" Grid.Row="7" Grid.ColumnSpan="3" HorizontalOptions="FillAndExpand" Image="exclaimation.png"/>
                <BoxView HeightRequest="1" Grid.Row="7" Grid.ColumnSpan="3" Color="LightGray" VerticalOptions="End" WidthRequest="160"/>
                <Button Text="7" BackgroundColor="#f8f8f9" Grid.Row="8" Grid.ColumnSpan="3" HorizontalOptions="FillAndExpand" Image="exclaimation.png"/>
                <BoxView HeightRequest="1" Grid.Row="8" Grid.ColumnSpan="3" Color="LightGray" VerticalOptions="End" WidthRequest="160"/>
                <Button Text="8" BackgroundColor="#f8f8f9" Grid.Row="9" Grid.ColumnSpan="3" HorizontalOptions="FillAndExpand" Image="exclaimation.png"/>
                <BoxView HeightRequest="1" Grid.Row="9" Grid.ColumnSpan="3" Color="LightGray" VerticalOptions="End" WidthRequest="160"/>

            </Grid>
        </ScrollView>

    </StackLayout>
</ContentPage>