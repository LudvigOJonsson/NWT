                <Button Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="3" Clicked="ShowPopup" BackgroundColor="#2f6e83" BorderColor="Black" BorderRadius="1" CornerRadius="0" Margin="0"/>
                <Image Grid.Row="12" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="50" HeightRequest="50" Source="playWhite.png" Margin="10"/>
