<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NWT.CommunityPage"
             x:Name = "Communitypage" 
             BackgroundColor="#f8f8f9">
    <ContentPage.Content>

        <StackLayout>
            <Grid x:Name="LoginGrid" RowSpacing="0" ColumnSpacing="0" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                    <RowDefinition Height="200" />
                    <RowDefinition Height="200" />
                    <RowDefinition Height="200" />
                    <RowDefinition Height="200" />
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" BackgroundColor="#FFFFFF" Image="speechbubble.png" />
                <Label Grid.Row="0" Grid.Column="0" TextColor="#50d2c2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="1" BackgroundColor="#FFFFFF" Image="questionmark.png"/>
                <Label Grid.Row="0" Grid.Column="1" TextColor="#50d2c2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                <Button Grid.Row="1" Grid.ColumnSpan="2" BackgroundColor="#FFFFFF" Image="megaphone.png"/>
                <Label Grid.Row="1" Grid.ColumnSpan="2" TextColor="#50d2c2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                <Button Grid.Row="2" Grid.ColumnSpan="2" BackgroundColor="#FFFFFF" Image="speechbubbles.png"/>
                <Label Grid.Row="2" Grid.ColumnSpan="2" TextColor="#50d2c2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="0" HeightRequest= "30" WidthRequest= "30" VerticalOptions="End" HorizontalOptions="End" BackgroundColor="#50d2c2" Image="rightarrow.png" Clicked="Insandare"/>
                <Button Grid.Row="0" Grid.Column="1" HeightRequest="30" WidthRequest="30" VerticalOptions="End" HorizontalOptions="End" BackgroundColor="#50d2c2" Image="rightarrow.png" Clicked="MakeInsandare"/>
                <Button Grid.Row="1" Grid.Column="1" HeightRequest="30" WidthRequest="30" VerticalOptions="End" HorizontalOptions="End" BackgroundColor="#50d2c2" Image="rightarrow.png"/>
                <Button Grid.Row="2" Grid.Column="1" HeightRequest="30" WidthRequest="30" VerticalOptions="End" HorizontalOptions="End" BackgroundColor="#50d2c2" Image="rightarrow.png"/>


            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>